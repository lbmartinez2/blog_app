<%= render @user %>

<div>
  <%= link_to "Edit this user", edit_user_path(@user), class:"btn btn-secondary" %>
  <%= link_to "Back to users", users_path, class:"btn btn-secondary" %>

</div>
<br>
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Delete User
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        This action cannot be reversed. Click "Delete" to confirm.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= button_to "Delete", @user, method: :delete, class:"btn btn-danger" %>
      </div>
    </div>
  </div>
</div>