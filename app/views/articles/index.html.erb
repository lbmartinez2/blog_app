<table class="table table-light table-hover table-striped">
    <thead class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %> </td>
                <td><%= article.name %> </td>
                <td><%= article.body %> </td>
            </tr>
            <% end %>
    </tbody>
</table>

<%= link_to 'New Article', new_article_path, class:"btn btn-secondary" %>